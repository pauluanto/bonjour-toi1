                    {{ form_widget(form.preparation, {'attr': {'placeholder': 'Temps de préparation', 'class': 'form-control input-md'}}) }}
                </div>
            </div>
            <div class="form-group">
                {{ form_label(form.cuisson, 'Temps de cuisson', {'attr': {'class': 'col-md-4 control-label'}} ) }}
