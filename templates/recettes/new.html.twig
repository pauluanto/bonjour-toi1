                    {{ form_widget(form.difficulte, {'attr': {'placeholder': '0 à 10', 'class': 'form-control input-md'}}) }}
                </div>
            </div>

            <div class="form-group">
                {{ form_label(form.cout, 'Cout du plat', {'attr': {'class': 'col-md-4 control-label'}} ) }}
