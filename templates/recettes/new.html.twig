                </div>
            </div>
            <div class="form-group">
                {{ form_label(form.typecuisson, 'Type de cuisson', {'attr': {'class': 'col-md-4 control-label'}} ) }}
                <div class="col-md-5">
                    {{ form_widget(form.typecuisson, {'attr': {'placeholder': 'Type de cuisson', 'class': 'form-control input-md'}}) }}
                </div>
            </div>
            <div class="form-group">
                {{ form_label(form.ingredient, 'Ingrédients de la recette', {'attr': {'class': 'col-md-4 control-label'}} ) }}
                <div class="col-md-5">
                    {{ form_widget(form.ingredient, {'attr': {'placeholder': 'Ingrédient', 'class': 'form-control input-md'}}) }}
                </div>
            </div>
            <div class="form-group">
                {{ form_label(form.etape, 'Etape de la recette', {'attr': {'class': 'col-md-4 control-label'}} ) }}
                <div class="col-md-5">
                    {{ form_widget(form.etape, {'attr': {'placeholder': 'Décrivez votre étape de la recette', 'class': 'form-control input-md'}}) }}
                </div>
            </div>


            <div class="form-group">
                {{ form_label(form.boisson, 'Boisson conseillé avec le plat', {'attr': {'class': 'col-md-4 control-label'}} ) }}
                <div class="col-md-5">
                    {{ form_widget(form.boisson, {'attr': {'placeholder': 'Boisson', 'class': 'form-control input-md'}}) }}
                </div>
            </div>
            <div class="form-group">
                {{ form_label(form.remarque, 'Autres remarques', {'attr': {'class': 'col-md-4 control-label'}} ) }}
                <div class="col-md-5">
                    {{ form_widget(form.remarque, {'attr': {'placeholder': 'Autres remarques', 'class': 'form-control input-md'}}) }}
                </div>
            </div>

            <div class="form-group">
                {{ form_label(form.user, 'Auteur', {'attr': {'class': 'col-md-4 control-label'}} ) }}
                <div class="col-md-5">
                    {{ form_widget(form.user, {'attr': {'class': 'form-control input-md'}}) }}
                </div>
            </div>
        </fieldset>
        <button type="submit">Soumettre ma recette!</button>
        {{ form_end(form) }}
    </section>

